# ===========================================
# E-commerce Backend Configuration - SIMPLE PASSWORDS
# ===========================================

# Application Configuration
NODE_ENV=development
PORT=3011

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://dev_ecom:your_password@localhost:5443/ecommerce_db"

# Redis Configuration
REDIS_URL="redis://:your_password@localhost:6390/0"

# RabbitMQ Configuration
RABBITMQ_URL="amqp://dev_ecom:your_password@localhost:5683/ecommerce"

# Elasticsearch Configuration
# Use developer user created by stack so app authenticates to ES
ELASTICSEARCH_URL="http://dev_ecom:your_password@localhost:9201"

# Swagger Configuration
SWAGGER_TITLE="E-commerce API"
SWAGGER_DESCRIPTION="E-commerce platform REST API documentation"
SWAGGER_VERSION="1.0.0"

# gRPC Configuration
GRPC_PORT=50051
GRPC_PACKAGE="example"
GRPC_PROTO_PATH="src/proto/example.proto"

# JWT Configuration for auth (access token)
JWT_ACCESS_TOKEN_EXPIRATION_TIME=900
JWT_ACCESS_TOKEN_PRIVATE_KEY="your_private_key"
JWT_ACCESS_TOKEN_PUBLIC_KEY="your_public_key"

# JWT Configuration for auth (refresh token)  
JWT_REFRESH_TOKEN_EXPIRATION_TIME=604800
JWT_REFRESH_TOKEN_PRIVATE_KEY="your_private_key"
JWT_REFRESH_TOKEN_PUBLIC_KEY="your_public_key"
